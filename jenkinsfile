pipeline {
    agent {
        node {
            label 'docker-buildagent-tmpl'
        }
    }
        stage('Stage1') {
            steps {
                sh '''
                wget https://go.dev/dl/go1.20.3.linux-amd64.tar.gz
                rm -rf /usr/local/go && tar -C /usr/local -xzf go1.20.3.linux-amd64.tar.gz
                export PATH=$PATH:/usr/local/go/bin
                go version
                '''
                echo "All good on Stage1!"
            }
        }
        stage('Stage2') {
            steps {
                echo "Stage2 stuff"
            }
        }
        stage('Stage3') {
            steps{
                echo "Stage3 stuff"
            }
        }
    }
}